// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id            String   @id @default(uuid())
  name          String
  username      String   @unique
  email         String   @unique
  password_hash String
  created_at    DateTime @default(now())

  questions Question[]
  Comment   Comment[]

  @@map("users")
}

model Question {
  id         String    @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime?

  title     String
  content   String
  anonymous Boolean?
  type      QuestionType?
  votes     Int?          @default(0)
  slug      String?       @unique

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  comments Comment[]

  @@index([user_id])
  @@map("questions")
}

model Comment {
  id         String    @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime?

  text String

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  Question    Question? @relation(fields: [question_id], references: [id])
  question_id String?

  @@index([user_id])
  @@index([question_id])
  @@map("comments")
}

enum QuestionType {
  FRIEND
  LOVE
  COLLEGE
  STRANGER
  FAMILY
}
